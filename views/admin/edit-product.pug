extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main 
        if editing
            form.edit-product-form(action="/admin/edit-product", method="POST")
                    .form-control
                        label(for="title") Title
                        input(type="text", name="title",value=`${product.title}`)#title
                        label(for="imgURL") IMAGE_URL
                        input(type="text", name="imgURL" ,value=`${product.imgURL}`)#imgURL
                        label(for="price") PRICE
                        input(type="number", name="price",value=`${product.price}`)#price
                        label(for="description") Description
                        textarea(name="description",value=`${product.description}`)#description
                        input(type="hidden", value= `${product.id}`,name="productid")
                    button.btn(type="submit") edit Product
        else
            form.add-product-form(action="/admin/add-product", method="POST")
                    .form-control
                        label(for="title") Title
                        input(type="text", name="title")#title
                        label(for="imgURL") IMAGE_URL
                        input(type="text", name="imgURL")#imgURL
                        label(for="price") PRICE
                        input(type="number", name="price")#price
                        label(for="description") Description
                        textarea(name="description")#description
                    button.btn(type="submit") add product
                      
                        
                             
                    