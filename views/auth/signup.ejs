<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if(errorMessage) { %>
                    <div class="user-message user-message--error">
                        <%= errorMessage %>
                    </div>
                    <% }  %>



                        <div class="bg-container">
                            <div class="circle-shape"></div>
                        </div>

                        <form class="login-form2" action="/signup" method="POST" novalidate>

                            <h3>SignUp Here</h3>



                            <label for="user-input">E-Mail</label>
                            <input type="email" name="email" placeholder="Email" id="user-input" value="<%= oldInput.email %>">
                            <label for="pass-input">Password</label>
                            <input type="password" name="password" placeholder="Password" id="pass-input">
                            <label for="user-input">Confirm Password</label>
                            <input type="password" name="confirmPassword" placeholder="Password" id="user-input">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                            <button class="login-btn" type="submit">Signup</button>

                            <p class="new-user">Old User? <a class="signup-link" href=" /login ">Login</a> here</p>
                        </form>
            </main>
            <%- include('../includes/end.ejs') %>